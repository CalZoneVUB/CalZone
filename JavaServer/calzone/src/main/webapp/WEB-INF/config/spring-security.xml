<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.2.xsd">

	<!-- Url Level Security -->
	<http auto-config="true" use-expressions="true">
		
		<intercept-url pattern="/profile" access="hasAnyRole('ROLE_USER', 'ROLE_ADMIN')" />
		<intercept-url pattern="/EnrolledCourses/**" access="ROLE_STUDENT" />
		<intercept-url pattern="/EnrollCourses/**" access="ROLE_STUDENT" />
		<intercept-url pattern="/readCSV" access="ROLE_STUDENT" />

		<form-login login-page="/" default-target-url="/profile"
			authentication-failure-url="/" />
		<logout logout-success-url="/" />
	</http>
	
	<authentication-manager>
		<authentication-provider>
			<password-encoder hash="sha-256" />
			<jdbc-user-service data-source-ref="dataSource"

				users-by-username-query="
		      		select Username, Password, Enabled 
		      		from USER where Username=?"

				authorities-by-username-query="
		   			select u.Username, ut.UserRole from USER u, USER_TYPE ut
		   			where u.UserRoleID = ut.UserRoleID and u.Username = ?" />
		</authentication-provider>
	</authentication-manager>

</beans:beans>